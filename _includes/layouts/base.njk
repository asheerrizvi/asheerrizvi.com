<!doctype html>
<html lang="{{ metadata.language }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://asheerrizvi.com/">
    <meta property="og:title" content="{{ title or metadata.title }}">
    <meta property="og:description" content="{{ description or metadata.description }}">
    <meta property="og:image" content="/img/meta-image.png">

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://asheerrizvi.com/">
    <meta property="twitter:title" content="{{ title or metadata.title }}">
    <meta property="twitter:description" content="{{ description or metadata.description }}">
    <meta property="twitter:image" content="/img/meta-image.png">

    <meta name="generator" content="{{ eleventy.generator }}">

    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
  </head>
  <body>
    <header>
      <div class="content-container">
        <h1 class="home"><a href="{{ '/' | url }}">{{ metadata.title }}</a></h1>

        <ul class="nav">
          <li class="nav-item"><a href="mailto:mail@asheerrizvi.com">Mail</a></li>
          <li class="nav-item"><a href="https://github.com/asheerrizvi">Github</a></li>
          <li class="nav-item"><a href="https://www.linkedin.com/in/asheer-rizvi">LinkedIn</a></li>
          <li class="nav-item"><a href="https://www.notion.so/asheerrizvi/Asheer-Rizvi-db7e81cd98e54d65afa3337f13d2473d">Resume</a></li>
        </ul>
      </div>
    </header>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>

    <footer></footer>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
